{
  "name": "dota-backend",
  "version": "0.3.0",
  "description": "Dota heroes and items as JSON data",
  "main": "server.js",
  "author": "kristi.stanescu@gmail.com",
  "license": "Apache-2.0",
  "scripts": {
    "docker-deploy-major": "RELEASE_TYPE=major node deploy",
    "docker-deploy-minor": "RELEASE_TYPE=minor node deploy",
    "docker-deploy-patch": "RELEASE_TYPE=patch node deploy",
    "docker-local": "node deploy-local",
    "docker-local-clean": "docker system prune",
    "docker-explore": "docker run --rm -it --entrypoint=/bin/bash gcr.io/pocket-dota/dota-data-background-runner",
    "deploy-major": "RELEASE_TYPE=major node deploy",
    "deploy-minor": "RELEASE_TYPE=minor node deploy",
    "deploy-patch": "RELEASE_TYPE=patch node deploy",
    "debug-skip": "SKIP=heroes,items,tips NODE_ENV=development node server",
    "nodemon-start": "NODE_ENV=production nodemon server",
    "test-api": "TEST_API=true npm start",
    "start-prod": "NODE_ENV=production node server",
    "start-dev": "NODE_ENV=development node server",
    "start-dev-push": "NODE_ENV=development FORCE_PUSH=true node server",
    "start-just-endpoints": "JUST_ENDPOINTS=true node server",
    "start": "npm run start-prod"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^0.9.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bluebird": "^3.5.0",
    "dockerignore": "^0.2.0",
    "es6-promise-pool": "^2.5.0",
    "express": "^4.15.4",
    "firebase-admin": "^4.0.3",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^12.2.0",
    "ncp": "^2.0.0",
    "node-schedule": "^1.2.5",
    "nodemon": "^1.18.4",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "simple-git": "^1.96.0",
    "simple-vdf": "^1.1.1",
    "util-promisifyall": "^1.0.2",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.7.2"
  },
  "nodemonConfig": {
    "delay": "60000",
    "verbose": true,
    "ignore": [
      "versioned_data/*",
      "logs/*"
    ]
  }
}
